# identifier from swaymsg -t get_inputs
set $mouse 1149:8257:Kensington_Slimblade_Trackball
# rebind middle mouse (top left button) to forward
bindsym --input-device=$mouse --whole-window BTN_MIDDLE seat - cursor press BTN_EXTRA, seat - cursor release BTN_EXTRA
# increase scroll speed
input $mouse scroll_factor 3
